---
interface Link {
  text: string;
  href: string;
}

interface Props {
  links: Link[];
}

const { links } = Astro.props;
---

<div class="jump-to">
  <ul class="content">
    {
      links.map((link) => (
        <li>
          <a href={link.href}>{link.text}</a>
        </li>
      ))
    }
  </ul>
</div>

<style>
  .jump-to {
    @apply flex flex-row justify-center;
  }
  .content {
    @apply flex flex-row flex-wrap gap-2 rounded-md bg-lavender/15 px-4 py-2;
  }
  .content li:first-child::before {
    content: none;
  }
  .content li::before {
    content: "/";
    @apply me-1 text-lavender;
  }
</style>
